  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/bun": "^1.1.6",
    "@types/node": "^20.14.12",
    "@total-typescript/ts-reset": "^0.5.1",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
